@{
    ViewBag.Title = "Sample Budget";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sample Budget</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .container {
            margin-top: 50px;
        }

        .header {
            background-color: #007bff;
            color: white;
            padding: 10px;
            border-radius: 5px;
            text-align: center;
        }

        table {
            width: auto;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th, td {
            border: 1px solid black;
            padding: 8px;
            text-align: left;
            font-family: monospace; /* Monospace font for proper alignment */
        }

        th {
            background-color: #f2f2f2;
        }

        tfoot td {
            font-weight: bold;
        }

        .btn-customize, .btn-optional-budget {
            margin-top: 20px;
            background-color: #007bff;
            color: white;
            border: none;
            padding: 10px 20px;
            cursor: pointer;
            font-size: 16px;
        }

            .btn-customize:hover, .btn-optional-budget:hover {
                background-color: #0056b3;
            }

        .optional-budget {
            display: none;
            margin-top: 20px;
        }

            .optional-budget h3 {
                margin-top: 20px;
            }
    </style>
    <script>
        function toggleOptionalBudget() {
            var optionalBudget = document.getElementById('optionalBudget');
            if (optionalBudget.style.display === 'none') {
                optionalBudget.style.display = 'block';
            } else {
                optionalBudget.style.display = 'none';
            }
        }

        function calculateTotal(row) {
            var cost = parseFloat(row.querySelector('.cost').innerText) || 0;
            var numberOfResources = parseFloat(row.querySelector('.number-of-resources').innerText) || 0;
            var total = cost * numberOfResources;
            row.querySelector('.total').innerText = total.toFixed(2);
        }

        function setupRealTimeCalculation() {
            var editableCells = document.querySelectorAll('[contenteditable="true"]');
            editableCells.forEach(function (cell) {
                cell.addEventListener('input', function () {
                    var row = cell.closest('tr');
                    calculateTotal(row);
                });
            });
        }

        document.addEventListener('DOMContentLoaded', function () {
            setupRealTimeCalculation();
        });
    </script>
</head>
<body>
    <div class="container">
        <h2 class="header">Sample Budget Prepared</h2>
        <table>
            <thead>
                <tr>
                    <th>Resource</th>
                    <th>Cost Per Hour</th>
                    <th>Number of Resources</th>
                    <th>Total</th>
                </tr>
            </thead>
